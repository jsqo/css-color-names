doctype html
html
	head
		title jsqo | CSS color names
		meta(charset="UTF-8")
		meta(name="viewport" content="width=device-width, initial-scale=1.0")
		link(rel='stylesheet', href="main.css")
		link(rel='stylesheet', href="tailwind.css")

		| <script async src="https://www.googletagmanager.com/gtag/js?id=G-RPRYZLG4KX"></script>
		| <script>window.dataLayer = window.dataLayer || []; function gtag(){dataLayer.push(arguments);} gtag('js', new Date()); gtag('config', 'G-RPRYZLG4KX');</script>

	body.text-center
		header.bg-purple-700.text-white.p-4
			div.heading
				h1.text-4xl.py-12 CSS color names
		- const fs = require("fs");
		- const colors_json = JSON.parse(fs.readFileSync("docs/data/colors.json"));
		- const colors = colors_json.colors;
		main
			div.colors.p-20
				each color, index in colors
					if index > 0 && index % 10 == 0
						div.break.m-auto.mt-12.mb-24
					div.colorbox.relative.inline-block.mx-4.my-12.py-1
						div.index Color ##{index+1}
						div.name.inline-block.p-3
							code.p-2= color.name
						div.color(style="background-color: "+color.color)
						div.hex.p-3
							code.bg-slate-300.inline-block.py-2.px-4= color.color
		footer.bg-purple-700.text-white.p-4
			div.copyright
				h4.text-xl.py-16 &copy; Copyright 2022, Ankur Seth.


